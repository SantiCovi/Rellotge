<Window x:Class="Rellotge.CrearPais"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rellotge"
        mc:Ignorable="d"
        Title="CrearPais" Height="300" Width="300">
    <Grid Background="#FFB7C7E8">
        <TextBox x:Name="Nombre" HorizontalAlignment="Left" Height="31" Margin="21,50,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="261" RenderTransformOrigin="0.495,1.657"/>
        <TextBox x:Name="Hora" HorizontalAlignment="Left" Height="31" Margin="21,149,0,0" TextWrapping="Wrap" Text="Hora" VerticalAlignment="Top" Width="261" RenderTransformOrigin="0.501,-1.659"/>
        <Button x:Name="Agregar" Content="Agregar" HorizontalAlignment="Left" Margin="21,229,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.385,-0.325" AllowDrop="True" Click="Agregar_Click"/>
        <Button x:Name="Cancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="207,229,0,0" VerticalAlignment="Top" Width="75" Click="Cancelar_Click"/>

    </Grid>
</Window>
